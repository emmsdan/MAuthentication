{
  "name": "authententication",
  "version": "0.0.1",
  "description": "basic authentication for emmsdan global ",
  "main": "app.js",
  "scripts": {
    "start": "node dist/app.js",
    "start:dev": "webpack-dev-server",
    "test": "jest ./src/**",
    "dev": "nodemon --exec babel-node -- src/bin/api.js",
    "build": "rimraf dist && ./node_modules/.bin/babel src -d dist",
    "lint": "eslint ./**.js --fix --ignore-path .gitignore"
  },
  "repository": "https://gitlab.com/emmsdan/authententication.git",
  "author": "Emmanuel Daniel <ecomje@gmail.com>",
  "license": "MIT",
  "private": true,
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "lint-staged": {
    "src/**/*.{js}": [
      "eslint . --fix",
      "git add",
      "npm run test"
    ]
  },
  "husky": {
    "hooks": {
      "lint": "npm run lint ",
      "pre-commit": "lint-staged && npm test",
      "pre-push": "lint-staged && npm test"
    }
  },
  "dependencies": {
    "@babel/runtime": "^7.8.4",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "open": "^7.0.2",
    "rimraf": "^3.0.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.4",
    "@babel/node": "^7.8.4",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/polyfill": "^7.8.3",
    "@babel/preset-env": "^7.8.4",
    "eslint": "^6.8.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jest": "^23.7.0",
    "husky": "^4.2.1",
    "jest": "^25.1.0",
    "lint-staged": "^10.0.7",
    "npm-run-all": "^4.1.5",
    "supertest": "^4.0.2"
  }
}
